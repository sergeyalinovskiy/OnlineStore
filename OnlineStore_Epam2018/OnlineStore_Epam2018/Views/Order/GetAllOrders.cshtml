@model IEnumerable<OnlineStore_Epam2018.Models.OrderViewModel>

@{
    ViewBag.Title = "GetAllOrders";
}

<h2>GetAllOrders</h2>

<table class="table">
    <tr>
        <th>
           Номер заказа
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.StatusOrderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.StatusOrderName)
        </td>
        <td>
        @if (@HttpContext.Current.User.IsInRole("admin"))
        {
                @Html.RouteLink("Изменить статус заказа", new { controller = "Order", action = "Edit", id = item.Id }, new { @class = "btn btn-default" }) 
        }
                @Html.RouteLink("Открыть", new { controller = "Order", action = "OrderDetails", id = item.Id }, new { @class = "btn btn-default" }) 
        </td>
    </tr>
}

</table>
