@model IEnumerable<OnlineStore_Epam2018.Models.ProductViewModel>

<h2>Поиск</h2>
<navigation_Board style="float:left;">
    

    <p>
        @using (Html.BeginForm())
        {
        <table>
            <tr>
                <th>
                    Продукты
                </th>
                <th>
                    Сезон
                </th>
                <th>
                    Цена
                </th>

            </tr>
            <tr>
                <th>
                    @Html.DropDownList("category", new SelectList(ViewBag.ListCategoryName), "Все", htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    @Html.DropDownList("season", new SelectList(ViewBag.ListSeasonName), "Все", htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    @Html.DropDownList("sort", new SelectList ( new[] { "цена по убыванию","цена по возрастанию" } ), "Все", htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    <input type="submit" value="Подобрать" />
                </th>
            </tr>
        </table>
        }
    </p>

<list_Board style="float:right;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeasonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeasonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.RouteLink("Details", new { controller = "Product", action = "Details", id = item.Id })
            </td>
        </tr>
}
        <p>
            @Html.ActionLink("Go back", "Index", "Product")
        </p>


    </table>
</list_Board>