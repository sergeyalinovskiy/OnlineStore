                    {
                    @Html.DisplayFor(modelItem => item.CategoryList.Where(m => m.CategoryId == item.ParentId).Select(m => m.CategoryName));
                    }
                    else
                    {*@
                @Html.DisplayFor(modelItem => item.ParentId)
                @*}*@
            </td>
            <td>
                @Html.RouteLink("Изменить", new { controller = "Category", action = "Edit", id = item.CategoryId }, new { @class = "btn btn-default" })
                @Html.RouteLink("Подробнее", new { controller = "Category", action = "Details", id = item.CategoryId }, new { @class = "btn btn-default" })
