@model OnlineStore_Epam2018.Models.ProductViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>


<img src="~/Content/img/@Html.DisplayFor(model => model.Picture)" width="356" />

<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SeasonName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeasonName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Count)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price) руб.
        </dd>

    </dl>
</div>
<p>

    @if (@HttpContext.Current.User.IsInRole("editor") || @HttpContext.Current.User.IsInRole("admin"))
    {
        @Html.RouteLink("Редактировать", new { controller = "Product", action = "Edit", id = Model.Id }, new { @class = "btn btn-default" })
    }

    @Html.RouteLink("Назад к списку продуктов", new { controller = "Product", action = "Index", id = Model.Id }, new { @class = "btn btn-default" })


    @if (@HttpContext.Current.User.IsInRole("user") )
    {
        @Html.RouteLink("Добавить в карзину", new { controller = "Product", action = "AddInBox", id = Model.Id }, new { @class = "btn btn-default" })
    }

    </p>
