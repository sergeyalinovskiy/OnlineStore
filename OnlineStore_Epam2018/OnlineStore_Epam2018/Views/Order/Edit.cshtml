@model OnlineStore_Epam2018.Models.OrderViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>OrderViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Address)
        @Html.HiddenFor(model => model.DateOrder)


        <div class="form-group">
            @Html.LabelFor(model => model.Status.StatusOrderName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Status.Id, new SelectList(Model.StatusOrders, "Id", "StatusOrderName"), Model.StatusOrders.Where(x => x.Id == Model.Status.Id).Select(m => m.StatusOrderName))
                @Html.ValidationMessageFor(model => model.Status.StatusOrderName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}