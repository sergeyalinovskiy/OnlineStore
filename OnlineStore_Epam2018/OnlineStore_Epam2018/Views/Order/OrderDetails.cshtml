@model IEnumerable<OnlineStore_Epam2018.Models.BasketViewModel>

@{
    ViewBag.Title = "OrderDetails";
}
<p>
    @Html.ActionLink("Оформить заказ", "Create")
</p>

@Html.Action("UserInfo", "Order", 0)


@Html.Action("OrderInfo", "Order", 1)


<h5>Продукты в заказе:</h5>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/img/@item.Picture" width="140" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
