@model IEnumerable<OnlineStore_Epam2018.Models.ProductViewModel>

@foreach (OnlineStore_Epam2018.Models.ProductViewModel item in Model)
{
<tr>
    <td>
        <img src="~/Content/img/@item.Picture" width="56" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SeasonName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Count)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price) руб.
    </td>
    <td>
        @Html.RouteLink("Подробнее", new { controller = "Product", action = "Details", id = item.Id })
    </td>
</tr>
}